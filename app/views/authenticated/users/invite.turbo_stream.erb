<% if @users %>
  <%# Also replaces the panel %>
  <%= turbo_stream.replace :users do %>
    <%= turbo_frame_tag :users, src: users_path %>
  <% end %>

  <%= turbo_stream.append :notification do %>
    <%= render partial: 'shared/notification', locals: { heading: 'User invited', description: 'They will receive an email shortly' } %>
  <% end %>
<% else %>

  <%= turbo_stream.replace :panel do %>
    <%= render layout: 'shared/panel', locals: { hidden: @hidden } do %>
      <%= render partial: 'users/invite_form' %>
    <% end %>
  <% end %>

<% end %>